@page "/Modules"
@rendermode @(new InteractiveServerRenderMode(prerender: false))

<h3>Modules</h3>


<button class="btn btn-success mb-3" @onclick="() => CreateModule()">
	<i class="bi bi-plus-lg"></i> New
</button>

@if (_records == null)
{
	<p><em>Loading...</em></p>
}
else
{
	<div class="table-responsive">
		<table class="table table-sm table-striped table-hover caption-top">
			<caption>List of Modules</caption>
			<thead class="table-dark">
				<tr>
					<th>Icon</th>
					<th>Name</th>
					<th>Abbreviation</th>
					<th>Is Active</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody class="table-group-divider">
				@foreach (var record in _records)
				{
					<tr>
						<td>
							@if (!string.IsNullOrEmpty(record.IconUrl))
							{
								<img src="@record.IconUrl" alt="@record.Name" width="32" height="32" />
							}
						</td>
						<td>@record.Name</td>
						<td>@record.Abbreviation</td>
						<td>@record.IsActive</td>
						<td>
							<div style="display: flex">
								@if (!record.IsActive)
								{
									<button class="btn btn-secondary btn-sm me-sm-1" @onclick="() => EnableDisable(record.Id)">
										<i class="bi bi-check-circle" title="Enable"></i>
									</button>
								}
								else
								{
									<button class="btn btn-secondary btn-sm me-sm-1" @onclick="() => EnableDisable(record.Id)">
										<i class="bi bi-x-circle" title="Disable"></i>
									</button>
								}
								<button class="btn btn-primary btn-sm me-sm-1" @onclick="() => EditModule(record.Id)">
									<i class="bi bi-pencil"></i>
								</button>
								<button class="btn btn-danger btn-sm me-sm-1" @onclick="() => AskConfirmDelete(record.Id)">
									<i class="bi bi-trash"></i>
								</button>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
}

<!-- Bootstrap Modal for Create New Module -->
<div class="modal fade" id="createModuleModal" tabindex="-1" aria-labelledby="createModuleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="createModuleModalLabel">Create New Module</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<ModuleCreateForm @ref="moduleCreateForm"
								  ListOfApplications="@_applications"
								  OnCancelClick="ModuleCreateForm_CancelClick"
								  OnSaveClickSuccess="ModuleCreateForm_SaveClickSuccess" />
			</div>
		</div>
	</div>
</div>

<!-- Bootstrap Modal for Create New Module -->
<div class="modal fade" id="updateModuleModal" tabindex="-1" aria-labelledby="updateModuleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="updateModuleModalLabel">Update an Module</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<ModuleUpdateForm @ref="moduleUpdateForm"
								  ListOfApplications="@_applications"
								  OnCancelClick="ModuleUpdateForm_CancelClick"
								  OnSaveClickSuccess="ModuleUpdateForm_SaveClickSuccess" />
			</div>
		</div>
	</div>
</div>

<!-- Bootstrap Modal for Delete Confirmation -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-top-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				Are you sure you want to delete this item?
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
				<button type="button" class="btn btn-danger" @onclick="ConfirmDelete">Delete</button>
			</div>
		</div>
	</div>
</div>